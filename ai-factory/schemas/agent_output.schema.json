{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "agent_output",
  "type": "object",
  "required": [
    "agent",
    "scope",
    "artifacts",
    "verification"
  ],
  "properties": {
    "agent": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "action"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "action": {
            "type": "string",
            "enum": [
              "added",
              "modified",
              "deleted"
            ]
          }
        }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "verification": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "gate",
          "status"
        ],
        "properties": {
          "gate": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "skipped"
            ]
          },
          "details": {
            "type": "string"
          }
        }
      }
    }
  }
}